<Page x:Class="MDTManagment.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDTManagment.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HomePage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Button Height="60" Width="70" Click="GoToPatientPage_Cick">Patients</Button>
        </Grid>
        <Grid Grid.Column="1">
            <Button Height="60" Width="70" Click="GoToOrdersPage_Cick">Orders</Button>
        </Grid>
        <Grid Grid.Column="2">
            <Button Height="60" Width="70" Click="GoToDentistsPage_Cick">Dentists</Button>
        </Grid>
    </Grid>
</Page>
