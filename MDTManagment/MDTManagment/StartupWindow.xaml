<metro:MetroWindow x:Class="MDTManagment.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDTManagment"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource AccentColorBrush}"
        mc:Ignorable="d"
        Icon="/Resources/icon.png" 
        Title="MDT Management"
        ShowMinButton="True"
        IsWindowDraggable="False"
        ShowSystemMenuOnRightClick="False"
        WindowState="Maximized"
        ShowMaxRestoreButton="False">
    <!--ResizeMode="NoResize"
    IsMaxRestoreButtonEnabled="True"-->
    
    <Frame Source="Views/HomePage.xaml" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    
    
    
</metro:MetroWindow>
